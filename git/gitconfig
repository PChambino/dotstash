[user]
    name = Pedro Chambino
    email = pchambino@gmail.com

[commit]
    gpgsign = true

[gpg]
    program = gpg2

[core]
    editor = vim
    pager = less -FX
    whitespace = trailing-space,space-before-tab
    excludesfile = ~/.gitignore_global

[alias]
    s = status -sb
    conflicts = !git diff --name-only --diff-filter=U | xargs git s
    aa = add
    a = add -N
    p = add -p
    d = diff --patience -M -C -C --no-prefix
    dc = !git d --cached
    ds = !git d --stat
    co = checkout
    cb = checkout -b
    ci = commit -v
    amend = commit -v --amend
    fixup = commit -v --fixup
    squash = commit -v --squash
    b = branch
    ba = branch -a
    bm = !git branch --merged | egrep -v '^\\* ' | grep -v master
    bn = branch --no-merged
    f = fetch
    ff = merge --ff-only
    fff = pull --ff-only
    sta = stash
    l = log --pretty=format:'%C(yellow)%h %C(reset)%s%C(red)%d %C(blue)%an %C(green)%ad %ar' --topo-order --date=short
    lb = !git l --first-parent
    ld = log --oneline --left-right
    me = !git l --author='Pedro Chambino' --no-merges
    today = !git me --since='6am'
    r = log -p --reverse --patience -M -C -C --no-prefix
    info = remote show origin
    hub = !git remote get-url origin | sed 's|^git@\\(.*\\):\\(.*\\).git$|https://\\1/\\2|' | xargs open

[push]
    default = current

[merge]
    stat = false
    defaultToUpstream = true
    ff = false

[rerere]
    enable = true
    autoupdate = true

[rebase]
    autosquash = true
    autostash = true
