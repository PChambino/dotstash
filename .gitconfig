[user]
    name = Pedro Chambino
    email = pchambino@gmail.com

[core]
    editor = vim
    pager = less -FX
    whitespace = trailing-space,space-before-tab,tab-in-indent
    excludesfile = ~/.gitignore_global

[color]
    ui = always

[alias]
    s = status -sb
    conflicts = !git diff --name-only --diff-filter=U | xargs git s
    aa = add
    a = add -N
    p = add -p
    d = diff
    dc = diff --cached
    co = checkout
    cb = checkout -b
    ci = commit -v
    amend = commit -v --amend
    fixup = commit -v --fixup
    squash = commit -v --squash
    b = branch
    ba = branch -a
    bm = !git branch --no-color --merged | egrep -v '^\\* ' | grep -v master
    bn = branch --no-color --no-merged
    f = fetch
    ff = merge --ff-only
    fff = pull --ff-only
    sta = stash
    l = log --pretty=format:'%C(yellow)%h %C(reset)%s%C(red)%d %C(blue)%an %C(green)%ar' --topo-order
    lb = !git l --first-parent
    ld = log --oneline --left-right
    me = !git l --author='Pedro Chambino' --no-merges
    today = !git me --since='6am'
    r = log -p --reverse -M -C -C --patience --no-prefix
    info = remote show origin

[push]
    default = current

[merge]
    stat = false
    defaultToUpstream = true
    ff = false

[rerere]
    enable = true
    autoupdate = true

[rebase]
    autosquash = true
    autostash = true
