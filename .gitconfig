[user]
    name = Pedro Chambino
    email = pchambino@gmail.com

[core]
    editor = vim
    pager = less -FX
    whitespace = trailing-space,space-before-tab,tab-in-indent
    excludesfile = ~/.gitignore_global

[color]
    ui = always

[alias]
    s = status -sb
    conflicts = !git diff --name-only --diff-filter=U | xargs git s
    aa = add
    a = add -N
    p = add -p
    d = diff
    dc = diff --cached
    co = checkout
    cb = checkout -b
    ci = commit -v
    amend = commit -v --amend
    fixup = commit -v --fixup
    squash = commit -v --squash
    b = branch
    ba = branch -a
    f = fetch
    ff = merge --ff-only
    fff = pull --ff-only
    sta = stash
    l = log --graph --pretty=format:'%C(yellow)%h %C(green)%ad %C(blue)%an %C(red)%d%C(reset) %s' --date=relative --date-order
    la = log --graph --pretty=format:'%C(yellow)%h %C(green)%ad %C(blue)%an %C(red)%d%C(reset) %s' --date=relative --date-order --all
    lb = log --graph --pretty=format:'%C(yellow)%h %C(green)%ad %C(blue)%an %C(red)%d%C(reset) %s' --date=relative --date-order --first-parent
    ld = log --oneline --left-right
    me = log --graph --pretty=format:'%C(yellow)%h %C(green)%ad %C(reset) %s' --date=relative --date-order --all --author='Pedro Chambino' --no-merges
    today = log --graph --pretty=format:'%C(yellow)%h %C(green)%ad %C(reset) %s' --date=relative --date-order --all --author='Pedro Chambino' --no-merges --since='6am'
    r = log -p --reverse -M -C -C --patience --no-prefix
    info = remote show origin

[push]
    default = current

[merge]
    stat = false
    defaultToUpstream = true
    ff = false

[rerere]
    enable = true
    autoupdate = true

[rebase]
    autosquash = true
    autostash = true
